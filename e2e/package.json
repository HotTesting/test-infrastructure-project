    "@wdio/local-runner": "^5.7.13",
    "@wdio/mocha-framework": "^5.7.13",
    "@wdio/sync": "^5.7.13",
    "@wdio/junit-reporter": "^5.0.0",
    "@wdio/allure-reporter": "^5.0.0",
